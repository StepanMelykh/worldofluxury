<section class="page-wrap page-content sign-up"> <!-- START PAGE WRAP -->
    <div class="container">
        <div class="section-title">
            <h1>SIGN UP</h1>
        </div>
        <div class="form-wrap login-form-wrap">

            {% form 'create_customer', class:"account-form" %}

                <div class="error-form">
                    {{ form.errors | default_errors }}
                </div>

                <div class="field-wrap">
                    <span>First Name*</span>
                    <input class="input-field" type="text"  name="customer[first_name]" />
                </div>
                <div class="field-wrap">
                    <span>Last Name*</span>
                    <input class="input-field" type="text" value="" name="customer[last_name]" />
                </div>
                <div class="field-wrap email-wrap">
                    <span>Email*</span>
                    <input class="input-field" type="email"  name="customer[email]" />
                </div>
                <div class="field-wrap">
                    <span>Password*</span>
                    <input class="input-field" type="password" value="" name="customer[password]" id="create_password" />
                </div>
                <p class="term-link">By creating an account, I agree to the Wet Noses <a href="/pages/our-policy">Privacy Policy.</a> </p>
                <div class="field-wrap submit-wrap">
                    <input type="submit" class="input-submit" value="SUBMIT">
                </div>

            {% endform %}

            <div class="additional-links sign-up">
                <p>Have an account? <a href="/account/login">Login here.</a></p>
            </div>
        </div>
    </div>
</section> <!-- END PAGE WRAP -->
<style>
    .error-form{
        color:red;
        padding-bottom: 10px;
    }
</style>