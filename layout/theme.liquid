<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <link rel="icon" type="image/png" sizes="32x32" href="{{ settings.favicon_image | img_url: "32x32" }}" />

  {% if template == 'index' %}
    <title>{{ shop.name }} | {{ page_title }}</title>
  {% elsif template == '404' %}
    <title>Page Not Found | {{ shop.name }}</title>
  {% else %}
    <title>{{ page_title }} | {{ shop.name }}</title>
  {% endif %}

  {% if page_description %}
    <meta name="description" content="{{ page_description }}" />
  {% endif %}

  {{ content_for_header }}

  <link rel="canonical" href="{{ canonical_url }}" />
  <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="{{ 'owl.carousel.min.css' | asset_url }}" />
    <link rel="stylesheet" href="{{ 'fonts.css' | asset_url }}" />
    <link rel="stylesheet" href="{{ 'style.css' | asset_url }}" />

    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
</head>
<body>
    <main>
      {% section 'header' %}
      {{ content_for_layout }}

    </main>
    <footer>
      {% section 'sub-footer' %}
      {% section 'footer' %}
    </footer>
    

    {% include "small-cart" %}
    {% include "mobile-navigation" %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>


    {{ 'lazysizes.min.js' | asset_url | script_tag }}
    <!-- {{ 'script-cart.js' | asset_url | script_tag }} -->
    {{ 'owl.carousel.min.js' | asset_url | script_tag }}
    {{ 'main.js' | asset_url | script_tag }}

</body>
</html>
