
<div class="container">
  <div class="top-row">
    <h1>{{ blog.title }}</h1>
  </div>

  <div class="blog-posts-wrap display-flex">
    {% paginate blog.articles by 5 %}
    <div class="blog-posts">
      {% for article in blog.articles %}
        <div class="article-wrap">
          <div class="article-title">
            <a href="{{ article.url }}">{{ article.title }}</a>
          </div>
          <div class="description">
            {{ article.excerpt | strip_html | slice: 0, 500 }}...
          </div>
          <div class="read-more">
            <a class="link-more" href="{{ article.url }}">Continue reading </a>
          </div>
          <!--
          <div class="tags">
            {% for tag in article.tags %} 
              <{div class="tag">{{ tag | link_to_add_tag: tag }}</div>
            {% endfor %}
          </div>
          -->
        </div>
      {% endfor %}
    
      {% include  'blog-pagination' %}
    </div>
    {% endpaginate %}
    <div class="blog-posts-sidebar">
      <div class="sub-title">Categories</div>
      <div class="blogs-list">
        <ul>
          {%  for blog in linklists.blogs.links %}
            <li><a href="{{ blog.url }}">{{ blog.title }}</a></li>  
          {% endfor %}          
        </ul>
      </div>
    </div>
  </div>
</div>

{% for blog in shop.blogs %}
  {{ blog.title }}
{% endfor %}

<script>
  console.log('Blog Start');
  console.log({{ shop.blogs | json  }});
  console.log('Blog End');
</script>

