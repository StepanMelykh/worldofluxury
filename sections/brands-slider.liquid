<div class="partners-wrap">
    <div class="section-title">{{ section.settings.title }}</div>
    <div id="partners-slider" class="partners-slider owl-carousel">
        {% for block in section.blocks %}
            <div class="partner-item">
                <a href="{{ block.settings.link }}">
                    <img class="main-image lazyload" src="{{ block.settings.image | img_url: "10x" }}" alt="{{ block.settings.title | escape }}"
                        data-src="{{ block.settings.image | img_url: '227x' }}"
                        data-widths="[227]"
                        data-sizes="auto"
                        tabindex="-1"
                    />
                </a>
            </div>            
        {% endfor %}
    </div>
</div>


{% schema %}
        {
        "name": "Brands slider",
        "tag": "section",
        "class": "partners",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            }
        ],
        "blocks": [
            {
                "name": "Slide",
                "type": "slide",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Slide title"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Link"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Brands slider"
            }
        ]
    }
{% endschema %}