<div class="footer-wrap">
    {% if section.settings.navigation != blank %}
        <div class="additional-navigation">
            <ul>
                {% for link in section.settings.navigation.links %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {%- endfor %}
            </ul>
        </div>    
    {% endif %}

    <div class="logos-wrap display-flex">
        {% for block in section.blocks %} 
            {% if block.settings.logo != blank %}
                <div class="logo-item">
                    <a href="{{ block.settings.link }}" target="_blank">
                        <img class="main-icon" src="{{ block.settings.logo  | img_url: 'master' }}" alt="{{ block.settings.title }}"> 
                    </a>
                </div>            
            {% endif %}
        {% endfor %}
    </div>        
</div>


<div class="modal__overlay"></div>

{% schema %}
    {
        "name": "Footer",
        "settings": [
            {
                "type": "link_list",
                "id": "navigation",
                "label": "Navigation"
            }
        ],
        "blocks": [
            {
                "name": "Blocks",
                "type": "blocks",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "image_picker",
                        "id": "logo",
                        "label": "Logo"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Link" 
                    }
                ]
            }
        ]

    }
{% endschema %}