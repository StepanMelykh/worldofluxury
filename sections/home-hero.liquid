<div class="slider-wrap">
    <div id="hero-slider" class="owl-carousel">
        {% for block in section.blocks %}
            {% if block.settings.image != blank %}
                <div class="slide-item">
                    <a href="{{ block.settings.link_url }}">
                        <img class="desktop-slide main-image lazyload" src="{{ block.settings.image | img_url: "10x" }}" alt="{{ block.settings.title | escape }}"
                            data-src="{{ block.settings.image | img_url: '1920x' }}"
                            data-widths="[1920]"
                            data-sizes="auto"
                            tabindex="-1"
                        />
                        {% if block.settings.image_mobile != blank %}
                            <img class="mobile-slide main-image lazyload" src="{{ block.settings.image_mobile | img_url: "10x" }}" alt="{{ block.settings.title | escape }}"
                                data-src="{{ block.settings.image_mobile | img_url: '768x' }}"
                                data-widths="[768]"
                                data-sizes="auto"
                                tabindex="-1"
                            />
                        {% endif %}
                    </a>
                </div>                
            {% endif %}
        {% endfor %}
    </div>
</div>

{% schema %}
    {
        "name": "Hero home",
        "tag": "section",
        "class": "home-hero",
        "settings": [],
        "blocks": [
            {
                "name": "Slide",
                "type": "slide",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Slide title"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_mobile",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "link_url",
                        "label": "Link url"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Home hero"
            }
        ]
    }
{% endschema %}